groups:
- name: node.hdd
  rules:
  - alert: hdd_unhealthy 
    expr: smartmon_device_smart_healthy{type="sat"} < 1
    for: 30s
    labels:
      severity: critical
    annotations:
      description: "Disk {{ $labels.disk }} is reported unhealthy"
  - alert: hdd_high_temp
    expr: smartmon_temperature_celsius_raw_value > 60
    for: 30s
    labels:
      severity: warning
    annotations:
      description: "{{ $labels.disk }} is running hot, currently {{ $value }} degrees."
